{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/reports",
      "dest": "backend/api/reports.py"
    },
    {
      "src": "/api/reports/(.*)",
      "dest": "backend/api/reports.py"
    },
    {
      "src": "/api/generate",
      "dest": "backend/api/generate.py"
    },
    {
      "src": "/api/sources",
      "dest": "backend/api/sources.py"
    },
    {
      "src": "/api/health",
      "dest": "backend/api/health.py"
    },
    {
      "src": "/rss",
      "dest": "backend/api/rss.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key",
    "GROK_API_KEY": "@grok_api_key",
    "DEEPSEEK_API_KEY": "@deepseek_api_key",
    "MODEL_PRIORITY": "@model_priority"
  }
}
